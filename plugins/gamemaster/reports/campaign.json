{
  "color": "blue",
  "title": "{title}",
  "img": "{campaign[image_url]}",
  "elements":
  [
    {
      "type": "Table",
      "params": {
        "values": [
          {
            "Name": "{campaign[name]}",
            "Start": "{campaign[start]:%y-%m-%d %H:%Mz}",
            "End": "{campaign[stop]:%y-%m-%d %H:%Mz}"
          }
        ]
      }
    },
    {
      "type": "Field",
      "params": {
        "name": "Description",
        "value": "{campaign[description]}",
        "default": "n/a",
        "inline": false
      }
    },
    {
      "type": "Ruler",
      "params": {
        "ruler_length": 28
      }
    },
    {
      "type": "SQLTable",
      "params": {
        "sql": "SELECT '- ' || server_name AS \"Campaign Servers\" FROM campaigns_servers WHERE campaign_id = {campaign[id]}",
        "inline": false
      }
    }
  ]
}
